<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KevinVera.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Examen Parcial" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
            </Frame>
            <Image Source="https://www.uisrael.edu.ec/wp-content/uploads/2020/05/logo-UISRAEL.png"/>
            <Image Source="logo.png"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese usuario"/>
            <Entry x:Name="txtPassword" Placeholder="Ingrese contraseña" IsPassword="True"/>
            <Button x:Name="btnLogin" Text="Ingresar" Clicked="btnLogin_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>